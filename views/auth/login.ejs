<%- include("../partials/htmlhead") %>
</head>

<body>
  <div class="container mt-5">
    <% if(message!=""){ %>
      <div class="alert alert-danger alert-dismissible" role="alert" data-auto-dismiss="5000">
        <%= message %>
      </div>
    <% } %>
  <h1 class="col-3 display-2">Login</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="auth" for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label class="auth" for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            <a href="/register">Don't have an account yet? Click here to sign up.</a>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include("../partials/footer") %>
<%- include("../partials/scripts") %>
</body>
</html>